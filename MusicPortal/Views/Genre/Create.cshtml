@model Portal.BLL.DTO.GenreDTO

<div class="myform">
    <h4>@Resources.Resource.Add_genre</h4>
    <hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>            
            <div class="form-group">
                <label asp-for="Name" class="control-label">@Resources.Resource.Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Resources.Resource.Add" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">@Resources.Resource.Back</a>
            </div>
        </form>
    </div>
</div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
