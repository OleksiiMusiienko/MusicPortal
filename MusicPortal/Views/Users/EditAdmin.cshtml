@model MusicPortal.Models.EditUserAdminModel
<div class="myform">
    <h4>@Resources.Resource.Edit_user</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditAdmin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="display:none">
                <input asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>          
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="StatusAdmin" /> @Html.DisplayNameFor(model => model.StatusAdmin)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Register" /> @Html.DisplayNameFor(model => model.Register)
                </label>
            </div>            
            <div class="form-group">
                    <input type="submit" value=@Resources.Resource.Save class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-primary">@Resources.Resource.Cancel</a>
            </div>
        </form>
    </div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
