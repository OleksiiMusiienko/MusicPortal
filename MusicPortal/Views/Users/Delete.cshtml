@model Portal.BLL.DTO.UserDTO
<div class="myform">
    <h4>@Resources.Resource.Confirm_delete_song</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Delete">               
                <div class="form-group">
                    @Html.DisplayFor(model => model.Name)
                </div>               
                <div class="form-group">
                    @Html.DisplayFor(model => model.LoginMail)
                </div>               
                <div class="form-group">
                    <input type="submit" value=@Resources.Resource.Delete class="btn btn-primary" /> |
                    <a asp-action="Index">@Resources.Resource.Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}




