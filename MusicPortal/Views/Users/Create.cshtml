@model MusicPortal.Models.RegisterModel
<div class="myform">
    <h4>@Resources.Resource.User_registration</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>          
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoginMail" class="control-label"></label>
                <input asp-for="LoginMail" class="form-control" />
                <span asp-validation-for="LoginMail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordConfirm" class="control-label"></label>
                <input asp-for="PasswordConfirm" class="form-control" />
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
                @if (@Context.Session.GetInt32("Admin") == 1)
                {
                     <div class="form-group form-check">
                        <label class="form-check-label">
                            <label asp-for="Register" class="control-label"></label>
                            <input class="form-check-input" asp-for="Register" />
                        </label>
                    </div>
                }                
                <input type="hidden" asp-for="DateReg" class="form-control"/>               
            <div class="form-group">
                    <input type="submit" value=@Resources.Resource.Registration class="btn btn-primary" />
                    <a asp-action="Index" asp-controller="Song" class="btn btn-primary">@Resources.Resource.Cancel</a>
            </div>
        </form>
    </div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
