@model MusicPortal.Models.ViewUserRegister

<h4>Регистрация</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>         
            <div class="form-group">
                <label asp-for="LoginMail" class="control-label">Имя</label>
                <input asp-for="Name" class="form-control" placeholder="Имя" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoginMail" class="control-label">Логин</label>
                <input asp-for="LoginMail" class="form-control" placeholder="Введите ваш E-mail в качестве логина" />
                <span asp-validation-for="LoginMail" class="text-danger"></span>
            </div>         
            <div class="form-group">
                <label asp-for="Password" class="control-label">Пароль</label>
                <input asp-for="Password" class="form-control" placeholder="Не менее 6 знаков, большие, маленькие буквы, символы" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordConfirm" class="control-label">Пароль</label>
                <input asp-for="PasswordConfirm" class="form-control" placeholder="Повторите пароль" />
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>         
            <div class="form-group">
                <input type="submit" value="Отправить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
