@model IEnumerable<Portal.BLL.DTO.UserDTO>
@if (@Context.Session.GetInt32("Admin") == 1)
{
    <div class="list-style-div">
        <table class="table">
            <thead>
                <tr>
                    <th style="visibility:hidden;">
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Resources.Resource.UserName
                    </th>
                    <th>
                        @Resources.Resource.Login
                    </th>
                    <th>
                        @Resources.Resource.Administrator
                    </th>
                    <th>
                        @Resources.Resource.Date
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="visibility:hidden;">
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LoginMail)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StatusAdmin)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateReg)
                        </td>
                        <td>
                            @Html.ActionLink(@Resources.Resource.Confirm, "RegisterConfirm", item) |
                            @Html.ActionLink(@Resources.Resource.Delete, "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div>
            <a asp-action="Index" class="btn btn-primary">@Resources.Resource.Back</a>
        </div>
    </div>
    
}